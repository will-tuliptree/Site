.container-slant {
  padding-top: 60px;
}

.main-container {
  background: #00bcd4;
  position: relative;
}

.main-container:before {
  content: '';
  position: absolute;
  left: 0;
  top: -150px;
  width: 100%;
  height: 240px;
  background: #00bcd4;
  transform: skewY(7.5deg);
  -webkit-backface-visibility: hidden;
}

.slant {
  margin: 10px auto;
  padding: 0 20px;
  padding-bottom: 10px;
  position: relative;
  max-width: 600px;
}
