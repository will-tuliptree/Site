.t-modal
    h2
        text-align center
        font-size 20px
        font-weight 600
        color $tuliptree-Aqua
    p
        padding-top 10px
    .modal-close
        float right
        position absolute
        top -50px
        right 0
        border none
        background-color transparent
        font-size 22px

