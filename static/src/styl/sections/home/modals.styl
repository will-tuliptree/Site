.t-modal
    h2
        text-align center
        font-size 20px
        font-weight 600
        color $tuliptree-Aqua
    h3
        text-align center
        font-size 16px
        font-weight 800
        &:after
            content ""
            width 170px
            border-top 3px solid #fff
            display block
            margin 0 auto
    p
        padding-top 10px
    .t-modal_section
        margin-top 25px
    .modal-close
        float right
        position absolute
        top -50px
        right 0
        border none
        background-color transparent
        font-size 22px

.vex
    .vex-dialog-buttons
        display none
    .vex-content
        background-color transparent
    .vex-overlay
        background rgba(32,40,66,0.95)
