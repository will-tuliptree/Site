#cu-services
    .cu-services_container
        .content
            text-align center
            .cu-services_description
                color $tuliptree-Navy
                margin-top 40px
                font-size 16px
                line-height 24px
        .t-header
             color $tuliptree-Navy

 .cu-services_list_container
    margin-top 60px
    .cu-services_list_item
        list-style-type none
        margin-top 80px
        .number
            position absolute
            top -175px
            font-size 300px
            left 81px
            z-index -2
            color #9debde
        .list-item_content
            border-top 5px solid $tuliptree-Navy
            margin 0 auto 70px
            max-width 200px
        h3
            font-size 16px
            height 34px
            word-spacing 9999999px
            margin 10px auto 0
        summary
            margin-top 10px
            font-size 14px
            height 130px
            width 205px
            @media $tablet-up
                height 100px
        button
            margin-top 10px
            background-color $tuliptree-Navy
            color white
            padding 2px 10px
