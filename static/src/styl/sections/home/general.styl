.home
    p,h1
        color $secondaryTextColor
    .absolute-content
        position absolute
        top 0
        margin 0 auto
        text-align center
        width 100%

.bold
    &:after
        content ""
        display block
        width 80px
        margin 0 auto
        border-bottom 10px solid #fff
.t-header
    text-align center
    font-size 24px
    &:after
        content " "
        width 70px
        margin 0 auto
        display block
        height 8px
        background-color $tuliptree-Navy
        margin-top 10px

.t-button
    width 115px
    font-size 13px
    padding 0 0
    background-color transparent
    border-color #fff
    box-shadow none
    color $tuliptree-Navy
    font-weight 600
    &:hover,active,focus
        background-color $tuliptree-Navy
        color #fff


.t-button-aqua
    display block
    background-color $tuliptree-Aqua
    border-color $tuliptree-Aqua
    margin 0 auto 15px
    width 225px
.img-overlay
        z-index -1
        position relative

.list-item_container
    li
        list-style-type none
        &:before
            content "\25CF"

.t-modal
    border none
    background transparent
    color #fff
    padding: 1em;
    position: relative;
    margin 100px auto
    max-width 700px
    width 80%
    position relative
