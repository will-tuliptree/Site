nav
    position fixed
    z-index 2
    width 100%
    background-color #fff
#nav-container
    top 0
    height 60px
    z-index 2
#nav
  display none
  padding 15px 0
  @media $tablet-up
    display block
  .nav-item-container
    text-align center
    position relative
    @media $tablet-up
      display inline-block
    .nav-item
        display inline-block
        &:nth-child(-n+4)
            @media $tablet-up
                padding-right 30px
            @media $desktop-up
                padding-right 30px
      a
        font-size 2.8vw
        padding-left 1vw
        font-family DINAlternate-Bold
        @media $tablet-up
          font-size 18px
          padding-left 0
      .nav-logo
        width 6.5vw
        @media $tablet-up
          width 35px
  #nav-signUp
    position absolute
    top 5px
    a
      color $tuliptree-Aqua
    @media $tablet-up
      right -91px

#mobile-nav
  @media $tablet-up
    display none
.mobile-nav-active
  background-color $tuliptree-Aqua
  height 100vh
.mobile-nav-wrapper
  padding-left 15px
  list-style-type none
  li
    padding 10px 0
    &:hover
      background-color $tuliptree-Navy
      a
        color #fff
    a
      padding-left 15px
.nav-hide
  height 0
  opacity 0
  li, a
    height 0
    opacity 0
