nav
    position fixed
    z-index 2
    width 100%
    background-color #fff
    box-shadow 2px 1px 1px #eaeaea
#nav-container
    top 0
    height 60px
    z-index 2
#nav
  display none
  padding 15px 0
  @media $tablet-up
    display block
  .nav-item-container
    text-align center
    position relative
    @media $tablet-up
      display inline-block
    .nav-item
        display inline-block
        position relative
        &:hover
            z-index 2
            .nav-item_box
                z-index -1
                display block

        &:nth-child(-n+4)
            @media $tablet-up
                padding-right 30px

      a
        font-size 2.8vw
        padding-left 1vw
        font-family DINAlternate-Bold
        z-index 2
        &:hover
            color $tuliptree-Aqua
        @media $tablet-up
          font-size 18px
          padding-left 0
      .nav-logo
        width 6.5vw
        @media $tablet-up
          width 35px
  .nav-item_box
    position absolute
    right 10px
    width 150px
    display none
    height 100px
    top 0
    z-index -1
    a
        font-size 12px
        display block
        color #fff
        &:hover,active,focus
          color $tuliptree-Aqua
    .border
        display block
        border-top 1px solid #fff
        width 115px
        margin 0 auto 5px
    .nav-item_box_content
        background-color $tuliptree-Navy
        margin-top 30px
        padding 10px 0 5px
  #nav-signUp
    position absolute
    top 5px
    a
      color $tuliptree-Aqua
    @media $tablet-up
      right -91px

.sub-nav_link
    &:after
        content ""
        width 115px
        border-top 1px solid #fff
        display block
        margin 0 auto 5px
    &:last-child
        &:after
            border none


#mobile-nav
  @media $tablet-up
    display none
.mobile-nav-active
  background-color $tuliptree-Aqua
  height 100vh
.mobile-nav-wrapper
  padding-left 15px
  list-style-type none
  li
    padding 10px 0
    &:hover
      background-color $tuliptree-Navy
      a
        color #fff
    a
      padding-left 15px
.nav-hide
  height 0
  opacity 0
  li, a
    height 0
    opacity 0
